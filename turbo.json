{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".vercel/**", "generated/**", "composer/**"]
    },
    "api#build": {
      "dependsOn": ["^build"],
      "outputs": ["generated-wundergraph/**"]
    },
    "app#build": {
      "dependsOn": ["^build", "api#build"],
      "outputs": [".svelte-kit/**", "composer/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV", "WG_ALLOWED_ORIGIN", "NEXT_PUBLIC_VERCEL_ENV"]
}
